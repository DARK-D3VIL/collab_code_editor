<h3>Create New File</h3>

<%= form_with url: project_project_files_path(@project), method: :post, local: true do |f| %>
  <%= hidden_field_tag :file_path, params[:path] || "" %>

  <div class="mb-3">
    <%= label_tag :name, "File Name" %>
    <%= text_field_tag "file[name]", "", class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= label_tag :language, "Language" %>
    <%= select_tag "file[language]", options_for_select(["rb", "js", "py", "java"]), class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= label_tag :content, "Content" %>
    <%= text_area_tag "file[content]", "", rows: 10, class: "form-control" %>
  </div>

  <%= hidden_field_tag "file[path]", params[:path] || "" %>

  <%= submit_tag "Create File", class: "btn btn-success" %>
<% end %>
