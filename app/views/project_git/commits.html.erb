<% content_for :title, "Commits for #{@branch.name}" %>

<div class="d-flex" style="min-height: 100vh;">
  <!-- Sidebar -->
  <%= render "partials/sidebar", active: :commits %>

  <!-- Main Content -->
  <div class="flex-grow-1 p-4 bg-light">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="mb-0">Commits for Branch: <%= @branch.name %></h2>
    </div>

    <!-- Commit list table -->
    <div class="card shadow-sm">
      <div class="card-body p-0">
        <table class="table table-hover table-bordered mb-0 align-middle">
          <thead class="table-light">
            <tr>
              <th scope="col">SHA</th>
              <th scope="col">Message</th>
              <th scope="col">Author</th>
              <th scope="col">Date</th>
              <th scope="col" class="text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @commits.each do |commit| %>
              <tr>
                <td><code><%= commit[:sha][0..6] %></code></td>
                <td><%= truncate(commit[:message], length: 60) %></td>
                <td><%= commit[:author] %></td>
                <td><%= commit[:time].strftime("%d %b %Y %H:%M") %></td>
                <td class="text-center">
                  <div class="d-flex justify-content-center gap-2">
                    <%= link_to "View Diff", project_git_branch_commit_path(@project, @branch.name, sha: commit[:sha]), class: "btn btn-sm btn-outline-primary" %>
                    <%= button_to "Rollback", project_git_branch_rollback_path(@project, @branch.name), method: :post,
                        params: { sha: commit[:sha] },
                        form: { data: { turbo_confirm: "Are you sure you want to rollback to this commit?" } },
                        class: "btn btn-sm btn-outline-danger" %>

                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
