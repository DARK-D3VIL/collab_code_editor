<div class="container mt-4">
  <div class="card shadow-sm border-0">
    <div class="card-body">
      <h2 class="fw-bold mb-3">📁 <%= @project.name %></h2>

      <p><strong>Project Code:</strong> <code><%= @project.slug %></code></p>
      <p><strong>Owner:</strong> 👑 <%= @project.owner.username || @project.owner.email %></p>
      <p><strong>Created At:</strong> <%= @project.created_at.strftime("%B %d, %Y — %I:%M %p") %></p>
      <p><strong>Active Members:</strong> <%= @active_members.count %></p>
    </div>
  </div>

  <div class="card mt-4 border-0 shadow-sm">
    <div class="card-body">
      <h5 class="fw-semibold text-success">✅ Active Members</h5>
      <% if @active_members.any? %>
        <ul class="list-group list-group-flush">
          <% @active_members.each do |user| %>
            <li class="list-group-item d-flex align-items-center gap-2">
              <i class="bi bi-person-circle text-primary"></i>
              <%= user.username || user.email %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-muted">No active members.</p>
      <% end %>
    </div>
  </div>
</div>
